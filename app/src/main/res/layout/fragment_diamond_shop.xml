<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DiamondShopFragment">



    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginBottom="60dp"
        android:src="@drawable/in_game_store_background"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
    <ImageView
        android:id="@+id/img_foreground"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/in_game_store_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/txt_diamond_shop_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Diamondshop"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/diamond_shop_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Diamondshop"
        android:textColor="@color/smooth_gold"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diamond_shop_header" />

    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="150dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#99dddddd"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/divider_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/aclonica"
                android:text="@string/lands"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center_horizontal"
                        android:text="@string/random_air_land"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/btn_air_land"
                        android:layout_width="80dp"
                        android:layout_height="130dp"
                        android:background="@drawable/shop_card_air_land" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/aclonica"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/diamond"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center_horizontal"
                        android:text="@string/random_fire_land"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/btn_single_fire_land"
                        android:layout_width="80dp"
                        android:layout_height="130dp"
                        android:background="@drawable/shop_card_fire_land" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/aclonica"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/diamond"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center_horizontal"
                        android:text="@string/random_water_land"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/btn_single_water_land"
                        android:layout_width="80dp"
                        android:layout_height="130dp"
                        android:background="@drawable/shop_card_water_land" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/aclonica"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/diamond"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center_horizontal"
                        android:text="@string/random_plant_land"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/btn_single_plant_land"
                        android:layout_width="80dp"
                        android:layout_height="130dp"
                        android:background="@drawable/shop_card_plant_land" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/aclonica"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/diamond"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/aclonica"
                    android:text="@string/single_cards"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/aclonica"
                            android:gravity="center_horizontal"
                            android:text="@string/random_supporter_card"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/btn_rnd_supporter_card"
                            android:layout_width="80dp"
                            android:layout_height="130dp"
                            android:background="@drawable/shop_supporter_random" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/aclonica"
                                android:text="60"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="centerCrop"
                                android:src="@drawable/diamond" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/aclonica"
                            android:gravity="center_horizontal"
                            android:text="@string/random_hero_card"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/btn_random_hero_card"
                            android:layout_width="90dp"
                            android:layout_height="130dp"
                            android:background="@drawable/shop_hero_random" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/aclonica"
                                android:textColor="@color/black"
                                android:textSize="16sp"/>
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/diamond"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/aclonica"
                            android:gravity="center_horizontal"
                            android:text="@string/random_card_rare_or_ultra_rare"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/btn_rnd_rare_or_ultra_rare"
                            android:layout_width="90dp"
                            android:layout_height="130dp"
                            android:background="@drawable/shop_card_rare_or_ultra_rare" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="350"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/aclonica"
                                android:textColor="@color/black"
                                android:textSize="16sp"/>
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/diamond"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            <!-- Ende Single_Cards -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/aclonica"
                android:text="@string/booster"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_booster_normal"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/deck_item_bg">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/caelumero"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/large_image" />

                <ImageView
                    android:id="@+id/img_single_booster_elara"
                    android:layout_width="123dp"
                    android:layout_height="117dp"
                    android:rotationY="180"
                    android:scaleType="centerCrop"
                    android:src="@drawable/elara_head_solo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aclonica"
                    android:text="Booster normal"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    app:layout_constraintStart_toEndOf="@id/img_single_booster_elara"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_normal_booster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/aclonica"
                    android:text="Booster normal"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    app:layout_constraintStart_toEndOf="@id/img_single_booster_elara"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/aclonica"
                    android:text="@string/normal_booster_info"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_single_booster_elara"
                    app:layout_constraintTop_toBottomOf="@id/txt_normal_booster" />

                <TextView
                    android:id="@+id/txt_normal_booster_contain_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/aclonica"
                    android:text="@string/normal_booster_info"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_single_booster_elara"
                    app:layout_constraintTop_toBottomOf="@id/txt_normal_booster" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/txt_normal_booster_contain_info"
                app:layout_constraintStart_toStartOf="@id/txt_normal_booster_contain_info"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/aclonica"
                    android:text="120"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/diamond"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_rare_booster"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/deck_item_bg_reversed">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/temple_of_waterbenders"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/large_image" />

                <ImageView
                    android:id="@+id/img_rare_booster_elara"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:rotationY="180"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tommy_removebg_preview"
                    android:translationX="100dp"
                    android:translationY="140dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/txt_rare_booster_shadow"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aclonica"
                    android:text="Booster rare guaranteed"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.example.talesofcaelumora.data.utils.GradientText
                    android:id="@+id/txt_rare_booster"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/aclonica"
                    android:text="Booster rare guaranteed"
                    android:textSize="26sp"
                    app:endColor="@color/selcted_value_ligth"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:middleColor="@color/smooth_gold"
                    app:startColor="@color/white" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aclonica"
                    android:text="@string/rare_booster_info"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/txt_rare_booster"
                    app:layout_constraintTop_toBottomOf="@id/txt_rare_booster" />

                <TextView
                    android:id="@+id/txt_rare_booster_contain_info"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/aclonica"
                    android:text="@string/rare_booster_info"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/txt_rare_booster"
                    app:layout_constraintTop_toBottomOf="@id/txt_rare_booster" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/txt_normal_booster_contain_info"
                app:layout_constraintStart_toStartOf="@id/txt_normal_booster_contain_info"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/aclonica"
                    android:text="450"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/diamond"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/btn_info"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@id/divider_top"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:background="@drawable/supporter_chip"
        android:backgroundTint="@color/black"
        android:src="@drawable/info_circled" />

    <LinearLayout
        android:id="@+id/ll_info"
