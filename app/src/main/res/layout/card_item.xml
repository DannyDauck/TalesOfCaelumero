<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="140dp"
    android:background="@drawable/card_air_hero"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_cardname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Elionara"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:text="250HP"
        android:textSize="6sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cardname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_cardname" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="77dp"
        android:layout_height="66dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/elara2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_describtion_bg"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luftschlag"
                    android:fontFamily="@font/alfa_slab_one"
                    android:textSize="4sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="4sp"
                    android:fontFamily="@font/carter_one"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    app:srcCompat="@drawable/airchip" />
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    app:srcCompat="@drawable/airchip" />
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    app:srcCompat="@drawable/airchip" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fügt dem aktiven Helden des Gegners Schaden zu"
                android:textSize="3sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_describtion_bg"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luftschlag"
                    android:fontFamily="@font/alfa_slab_one"
                    android:textSize="4sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="4sp"
                    android:fontFamily="@font/carter_one"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    app:srcCompat="@drawable/airchip" />
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    app:srcCompat="@drawable/airchip" />
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    app:srcCompat="@drawable/airchip" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fügt dem aktiven Helden des Gegners Schaden zu"
                android:textStyle="bold"
                android:textSize="3sp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="14dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_hp"
        app:layout_constraintStart_toEndOf="@+id/tv_cardname"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/airchip" />
</androidx.constraintlayout.widget.ConstraintLayout>