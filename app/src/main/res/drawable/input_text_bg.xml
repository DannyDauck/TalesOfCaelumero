<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#88ecbd47"
                android:endColor="#88da9b25"
                android:angle="45" />
            <corners android:bottomLeftRadius="16dp"
                android:topLeftRadius="8dp"
                android:topRightRadius="16dp"
                android:bottomRightRadius="8dp"/>
        </shape>
    </item>

    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="16dp"
                android:topLeftRadius="8dp"
                android:topRightRadius="16dp"
                android:bottomRightRadius="8dp"/>
            <gradient android:endColor="#88444444"
                android:startColor="#88ffffff"
                android:angle="45"/>
        </shape>
    </item>
</layer-list>