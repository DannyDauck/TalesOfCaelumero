<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Farbhintergrund mit abgerundeten Ecken -->
    <item>
        <shape>
            <corners android:topLeftRadius="16dp"
                android:topRightRadius="30dp"
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="30dp"/>
            <solid android:color="@color/black"/>
        </shape>
    </item>

    <!-- Beschnittene Bitmap mit abgerundeten Ecken -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <bitmap android:src="@drawable/temple_of_waterbenders"/>
    </item>

</layer-list>